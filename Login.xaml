<Window x:Class="Baza.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baza"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Canvas>
        <Label Canvas.Left="81" Canvas.Top="28">Login</Label>
        <TextBox x:Name="loginTextBox" Canvas.Left="125" Width="101" Canvas.Top="28" Focusable="True"></TextBox>
        <Label Canvas.Top="52" Width="60" Canvas.Left="60">Password</Label>
        <PasswordBox x:Name="passwordBox" Canvas.Left="125" Width="101" RenderTransformOrigin="0.495,0.501" Canvas.Top="54"></PasswordBox>
        <Button Canvas.Top="100" Canvas.Left="81" Width="67" RenderTransformOrigin="0.224,-0.545" Click="Login_Click" >Log in</Button>
        <Button RenderTransformOrigin="4.415,8.273" Canvas.Left="156" Canvas.Top="100" Width="70" Click="Cancel_Click" >Cancel</Button>
        <Label x:Name="messageLabel" Canvas.Top="129" Canvas.Left="7" Width="267" Content=""/>
    </Canvas>


</Window>
