<Window x:Class="Baza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="ThreeDBorderWindow">

    <Border Padding="10">
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem x:Name="Connect" Header="_Connect" InputGestureText="Ctrl+C" Click="Connect_Click">
                            <MenuItem.Icon>
                                <Image Source="./Resources/connect.ico" Height="25" Width="25" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem x:Name="Exit" Header="_Exit" InputGestureText="Ctrl+E" Click="Exit_Click">
                            <MenuItem.Icon>
                                <Image Source="./Resources/exit.jpg" Height="25" Width="25"  />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </DockPanel>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>

                <Button Name="Start" Content="Start" Grid.Column="0" Margin="0 0 10 0" Click="Start_Click"/>
                <Label Content="zapytanie: " Grid.Column="1"/>
                <TextBox Grid.Column="2" Name="inquiryTextBox"/>
            </Grid>

            <Grid Margin="10">
                    <DataGrid Name="g1" AutoGenerateColumns="True" Margin="0,0,0,-41" >
                     
                    </DataGrid>
                </Grid>
        </StackPanel>
    </Border>
       
  
   
   
</Window>
