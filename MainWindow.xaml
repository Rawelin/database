<Window x:Class="Baza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStyle="ThreeDBorderWindow">

    <StackPanel>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem x:Name="Connect" Header="_Connect" InputGestureText="Ctrl+C" Click="Connect_Click">
                        <MenuItem.Icon>
                            <Image Source="./Resources/connect.ico" Height="25" Width="25" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="Exit" Header="_Exit" InputGestureText="Ctrl+E" Click="Exit_Click">
                        <MenuItem.Icon>
                            <Image Source="./Resources/exit.jpg" Height="25" Width="25"  />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid>
            <TabControl Height="400">
              
                <TabItem Header="Klienci">
                    <StackPanel>
                        <Grid Margin="10" Height="350">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="450"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="233*"/>
                                <RowDefinition Height="33*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Column="0" Name="klienciGrid" AutoGenerateColumns="True" SelectionChanged="g1_SelectionChanged" />
                           
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock>Imię:</TextBlock>
                                <TextBox x:Name="nameTextBox"/>
                                <TextBlock>Nazwisko:</TextBlock>
                                <TextBox x:Name="surnameTextBox"/>
                                <TextBlock>Pesel:</TextBlock>
                                <TextBox x:Name="peselTextBox"/>
                                <Button Click="addClient_click">Zapisz</Button>


                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Pracownicy">
                    <StackPanel>
                        <Grid Margin="10" Height="250">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="233*"/>
                                <RowDefinition Height="33*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DataGrid Name="pracownicyGrid" AutoGenerateColumns="True" Margin="0,0,0,-41" Grid.RowSpan="3" SelectionChanged="g1_SelectionChanged" />

                        </Grid>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Samochody">
                    <StackPanel>
                        <Grid Margin="10" Height="250">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="233*"/>
                                <RowDefinition Height="33*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DataGrid Name="samochodyGrid" AutoGenerateColumns="True" Margin="0,0,0,-41" Grid.RowSpan="3" SelectionChanged="g1_SelectionChanged" />

                        </Grid>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Zamowienia">
                    <StackPanel>
                        <Grid Margin="10" Height="250">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="233*"/>
                                <RowDefinition Height="33*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DataGrid Name="zamowieniaGrid" AutoGenerateColumns="True" Margin="0,0,0,-41" Grid.RowSpan="3" SelectionChanged="g1_SelectionChanged" />

                        </Grid>
                    </StackPanel>

                </TabItem>

                  

                <TabItem Header="Raporty">

                    <StackPanel>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>

                            <Button Name="Start" Content="Start" Grid.Column="0" Margin="0 0 10 0" Click="Start_Click"/>
                            <Label Content="zapytanie: " Grid.Column="1"/>
                            <TextBox Grid.Column="2" Name="inquiryTextBox"/>
                        </Grid>

                        <Grid Margin="10" Height="250">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="233*"/>
                                <RowDefinition Height="33*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <DataGrid Name="g1" AutoGenerateColumns="True" Margin="0,0,0,-41" Grid.RowSpan="3" SelectionChanged="g1_SelectionChanged" />

                        </Grid>

                    </StackPanel>

                </TabItem>

            </TabControl>
        </Grid>

    </StackPanel>
</Window>
